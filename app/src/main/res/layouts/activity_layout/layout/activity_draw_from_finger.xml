<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/resetButton"
        android:text="reset"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/topButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/topButtonView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">

    <ImageButton
            android:id="@+id/sizeMinusButton"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="A-"
            android:textSize="5pt"
            android:background="@null"
            app:srcCompat="@drawable/aminus"/>

        <ImageButton
            android:id="@+id/sizePlusButton"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="A+"
            android:textSize="5pt"
            android:background="@null"
            app:srcCompat="@drawable/aplus"/>


        <ImageButton
            android:id="@+id/undoButton"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="undo"
            android:textSize="5pt"
            android:background="@null"
            app:srcCompat="@drawable/undi"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topButtonView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">
        <ImageButton
            android:id="@+id/finishButton"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="5pt"
            android:background="@null"
            app:srcCompat="@drawable/next" />

        <ImageButton
            android:id="@+id/dimPlus"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:text="dim+"
            android:background="@null"
            app:srcCompat="@drawable/dim_minus"/>

        <ImageButton
            android:id="@+id/dimMinus"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="dim-"
            android:background="@null"
            app:srcCompat="@drawable/dim_plus"/>
        </LinearLayout>
    </LinearLayout>


    <new_okaerinasai.com.archer.CustomCanvasForDraw
        android:id="@+id/customCanvas"
        android:layout_below="@id/topButtonView"
        android:layout_above="@id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </new_okaerinasai.com.archer.CustomCanvasForDraw>

</RelativeLayout>
