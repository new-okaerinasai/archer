<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/resetButton"
        android:text="reset"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/topButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sizeMinusButton"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="A-" />

        <Button
            android:id="@+id/sizePlusButton"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="A+" />


        <Button
            android:id="@+id/undoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="undo" />

        <Button
            android:id="@+id/finishButton"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Next" />

        <Button
            android:id="@+id/dimPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:text="dim+" />

        <Button
            android:id="@+id/dimMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:text="dim-" />

    </LinearLayout>


    <new_okaerinasai.com.archer.CustomCanvasForDraw
        android:id="@+id/customCanvas"
        android:layout_below="@id/topButtonView"
        android:layout_above="@id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </new_okaerinasai.com.archer.CustomCanvasForDraw>

</RelativeLayout>
